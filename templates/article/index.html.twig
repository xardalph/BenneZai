{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block content %}
    <div class="container pt-3">
        <h1 class="text-center pt-1">Articles</h1>

        {% for article in articles %}
            <div class="card animate__animated animate__zoomIn">
                <div class="card-body bg-dark">
                    <h5 class="card-title"><a href="{{ path('article_show', {'id': article.id}) }}">{{ article.title }}</a>
                    </h5>
                    <p class="card-text">{{ article.content }}</p>
                </div>
            </div>
        {% else %}
            <tr>
                <td class="text-center text-light" colspan="4">Aucun article disponible !</td>
            </tr>
        {% endfor %}
